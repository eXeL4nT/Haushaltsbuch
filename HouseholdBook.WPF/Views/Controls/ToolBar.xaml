                <StackPanel>
                    <Image Source="/Resources/Img/edit.png" Width="25"/>
                    <TextBlock Foreground="White">Übersicht</TextBlock>
                </StackPanel>
            </Button>
            <Button x:Name="btnAddBooking" Command="{Binding UpdateViewCommand}" CommandParameter="{x:Static local:ViewType.AddBooking}">
                <StackPanel>
                    <Image Source="/Resources/Img/add_in.png" Width="25"/>
                    <TextBlock Foreground="White">Neue Buchung</TextBlock>
                </StackPanel>
            </Button>
        </StackPanel>
