             xmlns:local="clr-namespace:HouseholdBook.WPF"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Height="45" Background="#363636" DockPanel.Dock="Top">
        <Grid.Resources>
            <!--<Style TargetType="RadioButton" BasedOn="{StaticResource ToolRadioButton}"/>-->
            <Style TargetType="RadioButton"/>
            <!--<Style TargetType="Button" BasedOn="{StaticResource ToolButton}"/>-->
        </Grid.Resources>
