        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="1"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="10 0">
            <Button Style="{StaticResource ToolButtonDefault}" Content="Übersicht" Command="{Binding UpdateViewCommand}" CommandParameter="{x:Static local:ViewType.Overview}"/>
            <Button Style="{StaticResource ToolButtonDefault}" Content="Neuer Eintrag" Command="{Binding UpdateViewCommand}" CommandParameter="{x:Static local:ViewType.AddEntry}"/>
            <Button Style="{StaticResource ToolButtonDefault}" Content="Platzhalter"/>
            <Button Style="{StaticResource ToolButtonDefault}" Content="Platzhalter"/>
        </StackPanel>
        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10 0">
            <Button Style="{StaticResource ToolButtonQuestionMark}">
            </Button>
            <Button Style="{StaticResource ToolButtonExit}">
            </Button>
        </StackPanel>
        <Grid x:Name="GridCursor" Grid.Row="1" Grid.ColumnSpan="2" Background="{StaticResource BrushAccent1}"/>
    </Grid>
