<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Haushaltsbuch.Styles">
    <!-- Colors -->
    <Color x:Key="ColorPrimaryUltraLight">#dedede</Color>
    <Color x:Key="ColorPrimaryLight">#575757</Color>
    <Color x:Key="ColorPrimaryDark">#3d3d3d</Color>
    <Color x:Key="ColorAccent1">#4c97c1</Color>
    <Color x:Key="ColorAccent2">#F2F2F2</Color>
    
    <!-- Brushes -->
    <SolidColorBrush x:Key="BrushPrimaryUltraLight" Color="{StaticResource ColorPrimaryUltraLight}"/>
    <SolidColorBrush x:Key="BrushPrimaryLight" Color="{StaticResource ColorPrimaryLight}"/>
    <SolidColorBrush x:Key="BrushPrimaryDark" Color="{StaticResource ColorPrimaryDark}"/>
    <SolidColorBrush x:Key="BrushAccent1" Color="{StaticResource ColorAccent1}"/>
    <SolidColorBrush x:Key="BrushAccent2" Color="{StaticResource ColorAccent2}"/>

</ResourceDictionary>